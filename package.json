{
  "name": "nextjs-boilerplate",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "db:dev:generate": "prisma generate --schema prisma/schema.prisma",
    "db:dev:migrate": "prisma migrate dev --schema prisma/schema.prisma",
    "db:dev:studio": "prisma studio --schema prisma/schema.prisma",
    "db:dev:seed": "node --loader ts-node/esm prisma/seed.ts",
    "db:pg:generate": "prisma generate --schema prisma/schema.postgres.prisma",
    "db:pg:migrate": "prisma migrate deploy --schema prisma/schema.postgres.prisma",
    "db:pg:studio": "prisma studio --schema prisma/schema.postgres.prisma"
  },
  "dependencies": {
    "@prisma/client": "^6.1.0",
    "bcryptjs": "^2.4.3",
    "next": "^15.1.4",
    "next-auth": "^5.0.0-beta.25",
    "otplib": "^12.0.1",
    "qrcode": "^1.5.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^22.10.1",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.16.0",
    "eslint-config-next": "^15.1.4",
    "postcss": "^8.4.49",
    "prisma": "^6.1.0",
    "tailwindcss": "^3.4.17",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  }
}